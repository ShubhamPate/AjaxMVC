<script src="~/scripts/jquery-1.10.2.js"></script>
<script src="~/scripts/jquery.unobtrusive-ajax.js"></script>
<script>
    function onbegin()
    {
        alert('Data will be sorted');
    }
    function oncomplete()
    {
        alert('Data sorted successfully');
    }
</script>
<style>
    .rowstyle
    {
        background-color:antiquewhite;
        text-align:center
    }
</style>
<h2>Product Index</h2>
Page Last Accessed : @DateTime.Now.ToString()
<br/>
<div id="loading" style="display:none">
    <img src="~/Content/spinner.gif" />
    Loading Please Wait..........
</div>
<br/>
<table width="500" border="1">
    <thead>
        <tr class="rowstyle">
            <td>
                @Ajax.ActionLink("Product Id","OrderById",new AjaxOptions()
              {
               HttpMethod="Get",
               UpdateTargetId="grid",
               InsertionMode=InsertionMode.Replace,
               LoadingElementId="loading",
               LoadingElementDuration=5000,
               OnBegin="onbegin",
               OnComplete="oncomplete"
              })
            </td>
            <td>
                @Ajax.ActionLink("Product Name", "OrderByName", new AjaxOptions()
           {
               HttpMethod = "Get",
               UpdateTargetId = "grid",
               InsertionMode = InsertionMode.Replace,
               LoadingElementId = "loading",
               LoadingElementDuration = 5000,
               OnBegin = "onbegin",
               OnComplete = "oncomplete"
           })
            </td>
            <td>
                @Ajax.ActionLink("Product Price", "OrderByPrice", new AjaxOptions()
           {
               HttpMethod = "Get",
               UpdateTargetId = "grid",
               InsertionMode = InsertionMode.Replace,
               LoadingElementId = "loading",
               LoadingElementDuration = 5000,
               OnBegin = "onbegin",
               OnComplete = "oncomplete"
           })
            </td>
        </tr>
    </thead>
    <tbody id="grid"></tbody>
</table>






